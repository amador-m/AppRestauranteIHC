<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivDishImage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/tvDishName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@id/ivDishImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Nome do Prato" />

        <TextView
            android:id="@+id/tvDishDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/tvDishName"
            app:layout_constraintTop_toBottomOf="@id/tvDishName"
            app:layout_constraintEnd_toEndOf="@id/tvDishName"
            tools:text="Descrição curta do prato que pode ter duas linhas." />

        <TextView
            android:id="@+id/tvDishPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/brand_red_primary"
            app:layout_constraintStart_toStartOf="@id/tvDishName"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="12dp"
            tools:text="R$ 25,00" />

        <ImageButton
            android:id="@+id/btnAddDish"
            android:layout_width="25dp"
            android:layout_height="24dp"
            android:background="@drawable/circle_button_orange_background"
            android:contentDescription="Adicionar ao Carrinho"
            android:src="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="@id/tvDishPrice"
            app:layout_constraintEnd_toEndOf="@id/tvDishName"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_filled"
            android:backgroundTint="@color/brand_orange_secondary"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Top 1 Venda" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>